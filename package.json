{
  "name": "x-bookmarks",
  "scripts": {
    "dev:frontend": "npm --workspace=packages/frontend run dev",
    "dev:backend": "npm --workspace=packages/backend run dev",
    "dev:worker": "npm --workspace=packages/backend run dev:worker",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\" \"npm run dev:worker\""
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "concurrently": "^9.1.2"
  },
  "dependencies": {
    "shared": "^1.0.0",
    "zod": "^3.24.1"
  }
}
